<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Quản lý đơn hàng</h1>
    <p class="mb-4">Danh sách đơn hàng đã hoàn thành</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã đơn hàng</th>
                            <th>Khách hàng</th>
                            <th>Trạng thái </th>
                            <th>Ngày tạo</th>
                            <th>Tổng tiền</th>
                            <th>Chỉnh sửa</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>STT</th>
                            <th>Mã đơn hàng</th>
                            <th>Khách hàng</th>
                            <th>Trạng thái </th>
                            <th>Ngày tạo</th>
                            <th>Tổng tiền</th>
                            <th>Chỉnh sửa</th>
                        </tr>
                    </tfoot>
                    <tbody id="myTable">
                        {{#each orders}}
                        <tr>
                            <td>{{this.noNum}}</td>
                            <td>OD{{this.noNum}}</td>
                            <td>{{this.user_email}}</td>
                            {{#ifCond this.status 1}}
                            <td style="cursor: pointer;"><span class="badge badge-info">
                                    {{this.order_status}}</span>
                            </td>
                            {{else}}
                            {{#ifCond this.status 2}}
                            <td style="cursor: pointer;"><span class="badge badge-warning">
                                    {{this.order_status}}</span>
                            </td>
                            {{else}}
                            {{#ifCond this.status 3}}
                            <td style="cursor: pointer;"><span class="badge badge-danger">
                                    {{this.order_status}}</span>
                            </td>
                            {{else}}
                            <td style="cursor: pointer;"><span class="badge badge-success">
                                    {{this.order_status}}</span>
                            </td>
                            {{/ifCond}}
                            {{/ifCond}}
                            {{/ifCond}}
                            <td>{{this.created_date}}</td>
                            <td>{{this.amount}} <i class="fas fa-heart" style="color: orange;"></i></td>
                            <td>
                                <a href="/admin/order/{{this._id}}" class="btn btn-info btn-sm">Xem</a>
                            </td>
                        </tr>
                        {{/each}}
                        <tr>
                            <td>Tổng tiền</td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>{{order_amount}} <i class="fas fa-heart" style="color: orange;"></i></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="/vendor/jquery/jquery.min.js"></script>
<style>
    .badge-danger {
        color: #e23e1d !important;
        background: #fdf0ed;
    }

    .badge-info {
        color: #247cc6 !important;
        background: #eef5fb;
    }

    .badge-success {
        color: #1eb48e !important;
        background: #edf9f6;
    }

    .badge-warning {
        color: #cac60f !important;
        background: #edf9f6;
    }

    .badge {
        font-size: 14px;
        font-weight: 400;
        min-width: 120px;
        width: 140px;
        height: 30px;
        padding: 10px 8px;
        text-align: center;
        border-radius: 20px;
    }
</style>