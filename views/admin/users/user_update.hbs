<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">THÔNG TIN CÁ NHÂN</h1>
                        </div>
                        <form class="user" action="/admin/user/{{user.id}}" method="POST">
                            <div class="form-row">
                                <div class="col-md-12 mb-3">
                                    <label>Email <span style="color: red">*</span></label>
                                    <input type="text" class="form-control" name="email" placeholder="Email"
                                        value="{{user.email}}" required disabled>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-3">
                                    <label>Họ và tên <span style="color: red">*</span></label>
                                    <input type="text" class="form-control" name="user_name" placeholder="Họ và tên"
                                        value="{{user.user_name}}" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label>Số điện thọại <span style="color: red">*</span></label>
                                    <input type="text" class="form-control" name="phone" placeholder="Số điện thoại"
                                        value="{{user.phone}}" required>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-3">
                                    <label>Ngày sinh <span style="color: red">*</span></label>
                                    <input id="datepicker" class="form-control" name="birthday"
                                        value="{{user.birthday}}" required>
                                </div>
                                <div class="form-group col-md-6 mb-3">
                                    <label>Giới tính <span style="color: red">*</span></label>
                                    <select class="form-control" name="gender">
                                        <option selected>{{user.gender}}</option>
                                        <option>Nam</option>
                                        <option>Nữ</option>
                                        <option>Khác</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-12 mb-4">
                                    <label>Số xu <span style="color: red">*</span></label>
                                    <input type="text" class="form-control" name="balance" value="{{user.balance}}"
                                        required disabled>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-12 mb-4">
                                    <label>Địa chỉ <span style="color: red">*</span></label>
                                    <input type="text" class="form-control" name="address" value="{{user.address}}"
                                        required>
                                </div>
                            </div>
                            <input class="btn btn-primary btn-user btn-block" type="submit" value="Lưu">
                            <a href="/admin/users" class="btn btn-google btn-user btn-block">
                                Trở lại
                            </a>
                        </form>
                    </div>
                </div>
                <div class="col-lg-5 d-none d-lg-block">
                    <div class="row mt-4 mb-3 mr-2">
                        <div id="mdb-lightbox-ui"></div>
                        <div class="col-md-12 mb-3">
                            <a href="https://res.cloudinary.com/lusapp/image/upload/{{user.avatar}}">
                                <img alt="picture"
                                    onerror="this.src='https://image.freepik.com/free-vector/cute-chibi-kawaii-characters_146706-51.jpg';"
                                    src="https://res.cloudinary.com/lusapp/image/upload/w_400,h_500,c_fill/{{user.avatar}}"
                                    class="img-fluid">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#datepicker').datepicker({
        uiLibrary: 'bootstrap4'
    });
</script>